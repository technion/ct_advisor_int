<% provide(:title, 'Unregister') %>
<h1>Unsubscribe</h1>
<p>Please fill in the below form to unsubscribe</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(@registration, url: {action: "unsub_send"}) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :domain %>
      <%= f.text_field :domain %>

      <%= f.submit "Unsubscribe my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
